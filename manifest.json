{
  "manifest_version": "0.2",
  "name": "mcp_word",
  "version": "1.0.1",
  "description": "mcp word office",
  "author": {
    "name": "LuiccianDev",
    "email": "LuiccianDev@gmail.com",
    "url": "https://github.com/LuiccianDev/mcp_word_office"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LuiccianDev/mcp_word_office"
  },
  "homepage": "https://github.com/LuiccianDev",
  "documentation": "https://github.com/LuiccianDev/mcp_word_office/blob/master/README.md",
  "support": "https://github.com/LuiccianDev/mcp_word_office/issues",
  "server": {
    "type": "python",
    "entry_point": "src/mcp_word/server.py",
    "mcp_config": {
      "command": "uv",
      "args": ["--directory",
        "${__dirname}","run","src/mcp_word/server.py"
      ],
      "env": {
        "MCP_ALLOWED_DIRECTORIES" : "${user_config:directory}"
      }
    }
  },
  "compatibility": {
    "platforms": [
      "darwin",
      "win32",
      "linux"
    ]
  },
  "user_config": {
    "directory": {
      "type": "directory",
      "title": "directory work",
      "description": "directory work",
      "required": true,
      "sensitive": false
    }
  },
  "license": "MIT"
}
